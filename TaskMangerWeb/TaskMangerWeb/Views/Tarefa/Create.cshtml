@model TaskMangerWeb.Models.TarefaModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Nova Tarefa</h1>

<h4>Forneça as informações sobre a Tarefa</h4>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Nome" class="control-label">
                    <i class="bi bi-file-earmark-text"></i> Nome da Tarefa
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome da Tarefa" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Custo" class="control-label">
                    <i class="bi bi-currency-dollar"></i> Custo
                </label>
                <input asp-for="Custo" class="form-control" placeholder="Digite o custo da Tarefa" />
                <span asp-validation-for="Custo" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DataLimite" class="control-label">
                    <i class="bi bi-calendar"></i> Data Limite
                </label>
                <input asp-for="DataLimite" type="date" class="form-control" />
                <span asp-validation-for="DataLimite" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Criar Tarefa" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
