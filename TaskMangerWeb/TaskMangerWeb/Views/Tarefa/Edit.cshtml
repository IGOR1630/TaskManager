@model TaskMangerWeb.Models.TarefaModel

@{
    ViewData["Title"] = "Edit Task";
}

<h1>Editar Tarefa</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo ID oculto -->
            <input asp-for="ID" type="hidden" />

            <!-- Nome da Tarefa -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome da Tarefa</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome da Tarefa" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Custo -->
            <div class="form-group">
                <label asp-for="Custo" class="control-label">Custo</label>
                <input asp-for="Custo" class="form-control" placeholder="Digite o custo da Tarefa" />
                <span asp-validation-for="Custo" class="text-danger"></span>
            </div>

            <!-- Data Limite -->
            <div class="form-group">
                <label asp-for="DataLimite" class="control-label">Data Limite</label>
                <input asp-for="DataLimite" type="date" class="form-control" />
                <span asp-validation-for="DataLimite" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
